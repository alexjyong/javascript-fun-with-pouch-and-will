function isEven(x) {
  
  
  if (x < 0) {
      x = x +1;
      return "even";
  }
  
  if ( x == 0) {
    
    return "even"; 
  }
  else if ( x == 1) {
   	return "odd"; 
  }
  else {
    
    return isEven(x -2);
  }
 
}

console.log(isEven(50));
// → true

console.log(isEven(75));
// → false
console.log(isEven(-1));  
// → ??

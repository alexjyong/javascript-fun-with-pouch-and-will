// Your code here.
let size = 8;
let string = "";
counter =0;
counter2 = 0;
while (counter <= size){
  
  while (counter2 <= size) {
    let sum = counter + counter2;
    if (sum % 2 ==0) {
     string += "⬜"; 
    }
    else {
     string += "⬛"; 
    }
    counter2 +=1;
  }
  counter2 = 0;
  counter += 1;
  string = string + "\n";
}
console.log(string + "\n");
